<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <connectionStrings>
    <!-- Azure SQL Database (produção / cloud) -->
    <add name="AzureSql"
         connectionString="Server=tcp:SEU-SERVIDOR.database.windows.net,1433;
                           Initial Catalog=SUA-BASE;
                           Persist Security Info=False;
                           User ID=SEU-LOGIN;
                           Password=SUA-SENHA;
                           MultipleActiveResultSets=False;
                           Encrypt=True;
                           TrustServerCertificate=False;
                           Connection Timeout=30;" />

    <!-- SQL Server LocalDB (laboratório / ambiente de desenvolvimento)
         Instala junto com o Visual Studio -->
    <add name="SqlLab"
         connectionString="Server=(localdb)\\MSSQLLocalDB;
                           Database=POOII_Lab;
                           Integrated Security=true;" />

    <!-- SQL Server Express (quando instalado no laboratório com instância nomeada) -->
    <add name="SqlExpress"
         connectionString="Server=.\\SQLEXPRESS;
                           Database=POOII_Lab;
                           Integrated Security=true;" />

    <!-- SQL Server padrão local (instância default) -->
    <add name="SqlServerLocal"
         connectionString="Server=localhost;
                           Database=POOII_Lab;
                           Integrated Security=true;" />

    <!-- (Opcional) PostgreSQL via Npgsql (exemplo didático, requer driver Npgsql) -->
    <!--
    <add name="PostgresLab"
         connectionString="Host=localhost;
                           Port=5432;
                           Database=POOII_Lab;
                           Username=postgres;
                           Password=postgres;" />
    -->
  </connectionStrings>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8"/>
  </startup>
</configuration>
