<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Controle de Chamados - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">SuporteUnip</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Chamados</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Create">Novo Chamado</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="bg-light py-4 mb-4">
        <div class="container">
            <h1 class="display-6">Controle de Chamados</h1>
            <p class="lead">Aplicação exemplo com Razor Pages, Bootstrap e ADO.NET</p>
        </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="bg-white mt-5 py-4 border-top">
        <div class="container text-muted">
            © SuporteUnip - Exemplo de projeto
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
