@page "{id:long}"
@model DetailsModel
@{
    ViewData["Title"] = "Detalhes do Chamado";
}

<h2>Detalhes</h2>

<dl class="row">
    <dt class="col-sm-3">ID</dt>
    <dd class="col-sm-9">@Model.Chamado?.Id</dd>
    <dt class="col-sm-3">Descrição</dt>
    <dd class="col-sm-9">@Model.Chamado?.Descricao</dd>
    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@((Model.Chamado?.Status ?? false) ? "Fechado" : "Aberto")</dd>
    <dt class="col-sm-3">Data Criação</dt>
    <dd class="col-sm-9">@Model.Chamado?.DataCriacao.ToString("g")</dd>
</dl>

<a asp-page="/Index" class="btn btn-secondary">Voltar</a>
